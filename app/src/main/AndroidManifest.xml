<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.martynas.dainynas">

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="DainynasDB.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="9" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.martynas.dainynas.Daina, com.example.martynas.dainynas.Posmelis, com.example.martynas.dainynas.SettingsDB" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">

        </activity>
        <activity
            android:name=".Pages.ListDaina"
            android:label="@string/title_activity_list_daina"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.martynas.dainynas.MainActivity" />
        </activity>
        <activity
            android:name=".Pages.ViewDaina"
            android:label="@string/title_activity_view_daina"
            android:parentActivityName=".Pages.ListDaina"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.martynas.dainynas.Pages.ListDaina" />
        </activity>
        <activity android:name=".Pages.Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.martynas.dainynas.MainActivity" />
        </activity>
        <activity
            android:name=".Pages.SearchList"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.martynas.dainynas.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Pages.AddDaina">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.martynas.dainynas.MainActivity" />
        </activity>
        <activity
            android:name=".Pages.HomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>