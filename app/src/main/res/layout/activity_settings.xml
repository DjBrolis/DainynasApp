<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.martynas.dainynas.Pages.Settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pasirinkite teksto dydį"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="preview"
        android:id="@+id/tekstoDysisPreview"
        android:layout_marginBottom="58dp"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_centerHorizontal="true"
        android:textColor="@color/listItem1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nustatyti"
        android:id="@+id/tekstoDydisSet"
        android:layout_alignTop="@+id/tekstoDysisPreview"
        android:layout_alignParentEnd="true"
        android:textColor="@color/listItem1"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Peržiūrint dainų žodžius raidės bus tokio dydžio."
        android:id="@+id/tekstasPreview"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/numberPicker"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/numberPicker"
        android:layout_alignLeft="@+id/numberPicker"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:layout_toLeftOf="@+id/textView4" />

    <Button
        android:text="Išsaugoti dainas į dokumentą"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/saveDainos"
        android:layout_below="@+id/tekstasPreview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
